doctype html
html
 head
  include head.pug
  title Sign in to Fake Google
 body
  main
   img(src='static/img/fakeGoogle.jpg', alt='Fake Google logo')
   p Sign In
   form(action='http://localhost:3000/logged', method='GET')
    div
     input(type='text', name='login', placeholder='Login')
     input(type='password', name='password', placeholder='Password', required)
    input(type='submit', value='Log In')
    a(href='/auth/google') Log in using Google
   include copy.pug
